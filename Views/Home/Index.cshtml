    <style>
        .background-container {
            width: 100%;
            height: 60vh; /* Adjust the height as needed */
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            background-image: url('/images/logos/mainbackground1.png'); /* Use the actual path to your image */
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;

        }

        .navbar {
            display: flex;
            justify-content: space-between;
            width: 100%;
            padding: 10px 20px;
            position: absolute;
            top: 0;
            z-index: 1;
        }

        .nav-links {
            display: flex;
            list-style: none;
            padding: 0;
            margin: 0;
        }

            .nav-links li {
                margin: 0 10px;
            }

            .nav-links a {
                color: white;
                text-decoration: none;
                font-size: 18px;
            }

        .social-media {
            display: flex;
            align-items: center;
        }

            .social-media a {
                margin-left: 10px;
            }

            .social-media img {
                width: 24px;
                height: 24px;
            }

        .content {
            position: relative;
            z-index: 1;
            padding: 20px;
            text-align: center;
            background: none; /* Optional: Adds a light background to content */
            border-radius: 10px;
            color: white;
        }

        .btn {
            padding: 10px 20px;
            margin: 10px;
            border: 2px solid black;
            background-color: white;
            color: black;
            text-decoration: none;
            font-size: 16px;
            text-align: center;
            transition: all 0.3s ease;
        }

            .btn:hover {
                background-color: black;
                color: white;
            }

        .centered {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 40px;
            text-align: center;
            background-color: white;
        }

        .container {
            width: 190%;
            max-width: 1500px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .split-container {
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 20px auto;
            border: 2px solid black;
            padding: 20px;
            max-width: 1100px;
        }

        .image-container {
            margin-right: 20px; /* Adjust margin to create space */
        }

            .image-container img {
                max-width: 100%;
                max-height: 200px;
            }

        .text-section {
            flex: 1;
        }

            .text-section h2 {
                font-size: 24px;
            }

            .text-section p {
                font-size: 16px;
                line-height: 1.5;
            }

        .icons-container {
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            text-align: center;
            margin: 20px 0;
        }

        .icon-item {
            display: inline-block;
            margin: 10px;
            text-align: center;
        }

            .icon-item i {
                font-size: 36px;
            }

        footer {
            background-color: #ccc;
            text-align: center;
            padding: 20px 0;
        }

            footer h1 {
                margin: 0;
            }

        .containers {
            text-align: center; /* Center align the content */
        }
    </style>
</head>


@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
    <title>Press</title>
    <style>
        .background-container {
            width: 100%;
            height: 60vh; /* Adjust the height as needed */
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            background-image: url('/images/logos/mainbackground2.png'); /* Use the actual path to your image */
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
        }

        .navbar {
            display: flex;
            justify-content: space-between;
            width: 100%;
            padding: 10px 20px;
            position: absolute;
            top: 0;
            z-index: 1;
        }

        .nav-links {
            display: flex;
            list-style: none;
            padding: 0;
            margin: 0;
        }

            .nav-links li {
                margin: 0 10px;
            }

            .nav-links a {
                color: white;
                text-decoration: none;
                font-size: 18px;
            }

        .social-media {
            display: flex;
            align-items: center;
        }

            .social-media a {
                margin-left: 10px;
            }

            .social-media img {
                width: 24px;
                height: 24px;
            }

        .content {
            position: relative;
            z-index: 1;
            padding: 20px;
            text-align: center;
            background: none; /* Optional: Adds a light background to content */
            border-radius: 10px;
            color: white;
        }

        .btn {
            padding: 10px 20px;
            margin: 10px;
            border: 2px solid black;
            background-color: white;
            color: black;
            text-decoration: none;
            font-size: 16px;
            text-align: center;
            transition: all 0.3s ease;
        }

            .btn:hover {
                background-color: black;
                color: white;
            }

        .centered {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 40px;
            text-align: center;
            background-color: white;
        }

        .centered {
            text-align: center;
            margin-bottom: 20px;
        }

        .card-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
        }

        .card {
            width: 300px;
            height: 200px;
            margin: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 18px;
            font-weight: bold;
            border-radius: 10px;
        }

        .black {
            background-color: black;
        }

        .white {
            background-color: white;
            color: black;
        }

        div {
            text-align: center; /* Center align the content */
            margin-bottom: 20px; /* Add margin for spacing */
        }

        h2 {
             /* Add a black border at the bottom of the heading */
            padding-bottom: 10px; /* Add padding for spacing */
        }
        .image-container {
            display: flex;
            justify-content: center;
        }

            .image-container img {
                width: 200px; /* Adjust width as needed */
                height: auto;
                margin: 10px; /* Adjust margin for spacing */
                border: 2px solid black; /* Add a black border around the images */
                border-radius: 5px; /* Optional: Add border radius for rounded corners */
            }

        .container {
            width: 190%;
            max-width: 1500px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .split-container {
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 20px auto;
            border: 2px solid black;
            padding: 20px;
            max-width: 1100px;
        }

        .image-container {
            margin-right: 20px; /* Adjust margin to create space */
        }

            .image-container img {
                max-width: 100%;
                max-height: 200px;
            }

        .text-section {
            flex: 1;
        }

            .text-section h2 {
                font-size: 24px;
            }

            .text-section p {
                font-size: 16px;
                line-height: 1.5;
            }

        .icons-container {
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            text-align: center;
            margin: 20px 0;
        }

        .icon-item {
            display: inline-block;
            margin: 10px;
            text-align: center;
        }

            .icon-item i {
                font-size: 36px;
            }

        footer {
            background-color: #ccc;
            text-align: center;
            padding: 20px 0;
        }

            footer h1 {
                margin: 0;
            }

        .containers {
            text-align: center; /* Center align the content */
        }

        .book-container {
            text-align: center; /* Center align the content */
            margin-bottom: 20px; /* Add margin for spacing */
        }

        h2 {
            padding-bottom: 10px; /* Add padding for spacing */
        }

        .image-containers {
            display: flex;
            justify-content: center;
            flex-wrap: wrap; /* Allow images to wrap to next line */
        }

        .image-item {
            margin: 10px; /* Adjust margin for spacing */
            text-align: center; /* Center align the image and title */
        }

            .image-item img {
                width: 200px; /* Adjust width as needed */
                height: auto;
                border: 2px solid black; /* Add a black border around the images */
                border-radius: 5px; /* Optional: Add border radius for rounded corners */
            }

        .image-title {
            margin-top: 5px; /* Add margin for spacing between image and title */
        }
    </style>
</head>

<body>
    <div class="background-container">
        <div class="navbar">
            <ul class="nav-links">
                <li><a asp-action="aboutme" class="btn1">About Me</a></li>
                <li><a href="Books">Books</a></li>
                <li><a href="Blog">Blog</a></li>
                <li><a asp-action="Press" class="btn1">Press</a></li>
                <li><a asp-action="contact" class="btn1">Contacts</a></li>
                <li><a href="Index">Home</a></li>
            </ul>
            <div class="social-media">
                <a href="https://www.youtube.com/channel/UCk8KNHeFef2K29Lvi8jC0jw" target="_blank">
                    <img src="/images/logos/youtube.png" alt="YouTube"> <!-- Replace 'youtube-logo.png' with the path to your image -->
                </a>
                <a href="https://www.facebook.com/kristianmarpe.tallo.5" target="_blank">
                    <img src="/images/logos/facebook.png" alt="Facebook"> <!-- Replace 'facebook-logo.png' with the path to your image -->
                </a>
                <a href="https://www.instagram.com/im_notsanji/" target="_blank">
                    <img src="/images/logos/instagram.png" alt="Instagram"> <!-- Replace 'instagram-logo.png' with the path to your image -->
